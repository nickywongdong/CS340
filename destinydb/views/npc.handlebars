<ul>
  <li><a href="/">Home</a></li>
  <li><a href="/guardian">Guardians</a></li>
  <li><a href="/npc">NPCs</a></li>
  <li><a href="/planet">Planets</a></li>
</ul>

{{#each foo}}
{{this}}
{{/each}}


<div>
  <h3> Assign a Strike to a Guardian </h3>

  <form id="add_guardian_strike" action="/npc/strike" method="post">
    Guardian: <select name="gid">
      {{#each guardians}}
      <option value="{{gid}}">{{name}}</option>
      {{/each}}
    </select><br>
    Strikes:<sup>Multi-select</sup> <select multiple name="strikes">

      {{#each strike}}
      <option value="{{sid}}">{{name}}</option>
      {{/each}}
    </select><br>
    <input type="submit" value="Submit">
  </form>
</div>


<br/>
<h3> NPCs: </h3>
<table>
  <thead>
    <th>Name</th>
    <th>Class</th>
    <th>Race</th>
    <th>Current Planet</th>
  </thead>
  <tbody>
    {{#each npcs}}
    <tr>
      <td>{{name}}</td>
      <td>{{class}}</td>
      <td>{{race}}</td>
      <td>{{current_planet}}</td>
      <td><button onclick="deleteNPC({{nid}})">Delete</button></td>
    </tr>
    {{else}}
    <b> No NPCs found! Grant some using the form. </b>
    {{/each}}

  </tbody>
  <h2>Add an NPC:</h2>
  <form id="addnpc" action="/npc" method="post">
    Name: <input type="text" name="name"><br>
    Class: <input type="text" name="class"><br>
    Race: <input type="text" name="race"><br>
    Current Planet: <select name="current_planet">
      {{#each planet}}
      <option value="{{pid}}">{{name}}</option>
      {{/each}}
    </select><br>
    <input type="submit" value="Submit">
  </form>
</table>


<h3> Guardians on Strikes: </h3>
<table>
  <thead>
    <th>Guardian</th>
    <th>Strike</th>
  </thead>
  <tbody>
    {{#each guardian_on_strike}}
    <tr>
      <td>{{Guardian}}</td>
      <td>{{Strike}}</td>
      <td><button onclick="removeStrikeGuardian({{gsid}},{{ssid}})">Delete</button></td>
    </tr>
    {{else}}
    <b> No Guardians with any Strikes found! Grant some using the form. </b>
    {{/each}}

  </tbody>
</table>
