<h1>Current Guardians</h1>

<ul>
  <li><a href="/">Home</a></li>
  <li><a href="/guardian">Guardians</a></li>
  <li><a href="/npc">NPCs</a></li>
  <li><a href="/planet">Planets</a></li>
  <li><a href="/weapons">Weapons</a></li>
</ul>


{{#each foo}}
{{this}}
{{/each}}
<table>
  <h2>Add a Guardian</h2>
  <thead>
    <th>Name</th>
    <th>Class</th>
    <th>Race</th>
    <th>Current Planet</th>
    <th>Level</th>
  </thead>
  <tbody>
    Filter for Guardian: <select name="select_guardian" id="guardian-selector" onchange="filterGuardian(this)">
      {{#each guardians}}
      <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select><br>
    <script defer>selectGuardian({{guardian.name}});</script><br><br>
    {{#each guardians}}
    <tr>
      <td>{{name}}</td>
      <td>{{class}}</td>
      <td>{{race}}</td>
      <td>{{current_planet}}</td>
      <td>{{level}}</td>
      <td><button onclick="deleteGuardian({{id}})">Delete</button></td>
      <td><a href="/guardian/{{id}}">Update</a></td>
      <td><a href="/guardian/weapons/{{id}}">Weapons</a></td>
    </tr>
    {{/each}}
  </tbody>
  <form id="addguardian" action="/guardian" method="post">
    Name: <input type="text" name="name"><br>
    Class: <input type="text" name="class"><br>
    Race: <input type="text" name="race"><br>
    Current Planet: <select name="current_planet">
      {{#each planets}}
      <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select><br>
    Level: <input type="number" name="level"><br>
    <input type="submit" value="Submit">
  </form>
</table>
